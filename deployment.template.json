{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "perimetersolution": {
                "username": "$CONTAINER_REGISTRY_USERNAME_perimetersolution",
                "password": "$CONTAINER_REGISTRY_PASSWORD_perimetersolution",
                "address": "perimetersolution.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "PerimeterModule": {
            "env": {
              "HUB_CONNECTION_STRING": {
                "value": "HostName=icontrolo-id-01.azure-devices.net;SharedAccessKeyName=iothubowner;SharedAccessKey=ianHhhTPA2CTNvq8RH35T+EFNJ17a6YhiDkBXI4ZDi8="
              },
              "DISPOSITIVO_CONNECTION_STRING": {
                "value": "HostName=icontrolo-id-01.azure-devices.net;DeviceId=dsp-icontrolo-01;SharedAccessKey=D4C4AYj7aOHPYBMOYfvflSBbYPewjK6IIAkbLqAatDc="
              }
            },
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.PerimeterModule}",
              "createOptions": "{\"HostConfig\":{\"Binds\":[\"/dev/i2c-1:/dev/i2c-1\"],\"Privileged\":true}}"
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "PerimeterModuleToIoTHub": "FROM /messages/modules/PerimeterModule/outputs/* INTO $upstream",
          "sensorToPerimeterModule": "FROM /messages/modules/SimulatedTemperatureSensor/outputs/temperatureOutput INTO BrokeredEndpoint(\"/modules/PerimeterModule/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}